---
const title = "Ta-Te-Ti en Astro";
---
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f8f9fa;
        }

        h1 {
            margin-top: 20px;
            font-size: 24px;
            color: #333;
        }

        .board {
            display: grid;
            grid-template-columns: repeat(3, 100px);
            grid-template-rows: repeat(3, 100px);
            gap: 5px;
            margin: 20px auto;
            width: 320px;
        }

        .cell {
            position: relative;
            width: 100px;
            height: 100px;
            border: 2px solid black;
            font-size: 2em;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ffffff;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .cell:hover {
            background: #e0e0e0;
        }

        input {
            display: none;
        }

        /* Alterna entre X y O seg√∫n el turno */
        input:nth-of-type(odd):checked + label::after {
            content: "X";
            color: red;
        }

        input:nth-of-type(even):checked + label::after {
            content: "O";
            color: blue;
        }

        /* Bloquea las casillas ya seleccionadas */
        input:checked + label {
            pointer-events: none;
        }
    </style>
</head>
<body>
    <h1>Juego de Ta-Te-Ti</h1>
    <div class="board">
        <input type="radio" id="c1" name="cell"><label for="c1" class="cell"></label>
        <input type="radio" id="c2" name="cell"><label for="c2" class="cell"></label>
        <input type="radio" id="c3" name="cell"><label for="c3" class="cell"></label>
        <input type="radio" id="c4" name="cell"><label for="c4" class="cell"></label>
        <input type="radio" id="c5" name="cell"><label for="c5" class="cell"></label>
        <input type="radio" id="c6" name="cell"><label for="c6" class="cell"></label>
        <input type="radio" id="c7" name="cell"><label for="c7" class="cell"></label>
        <input type="radio" id="c8" name="cell"><label for="c8" class="cell"></label>
        <input type="radio" id="c9" name="cell"><label for="c9" class="cell"></label>
    </div>
</body>
</html>
